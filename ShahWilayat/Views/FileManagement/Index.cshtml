<div class="modal fade text-left" id="FileManagement" role="dialog" aria-labelledby="myModalLabel16" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel16">Upload New Document</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-body frmFileManagement">
                    <h4 class="form-section"><i class="la la-file"></i> Document Details</h4>
                    <hr>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="ddlParent">Parent</label>
                                <select class="form-control ddlParent"></select>
                            </div>
                        </div>
                      

                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="ddlChild">Child</label>
                                <select class="form-control ddlChild"></select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="ddlSubChild">Sub Child</label>
                                <select class="form-control ddlSubChild notrequired"></select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="txtContentName">Content Name</label>
                                <input type="text" class="form-control txtContentName" placeholder="Enter content name">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="txtSubChildOrder">File Order</label>
                                <input type="text" class="form-control txtSubChildOrder" placeholder="Enter file order">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="fileinput fileinput-new" data-provides="fileinput">
                                <label>Attach Document</label>
                                <span class="btn btn-block btn-outline btn-info btn-file">
                                    <span class="fileinput-new">Document</span>
                                    <i class="las la-file-alt"></i>&nbsp;&nbsp;
                                    <span class="fileinput-exists">Change</span><input type="file" name="..." class="txtFilePath"  />
                                </span>
                                <span class="fileinput-filename"></span>
                                <a href="#" class="close fileinput-exists" data-dismiss="fileinput" style="float: none">×</a>
                            </div>
                        </div>
                     
                    </div>
                


                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn grey btn-outline-info" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-outline-dark btnSaveChanges">Save changes</button>
