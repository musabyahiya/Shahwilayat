            </div>
        </div>
    </div>
</div>
@*Edit Attachment Start*@

@*Delete Modal Start*@
<div class="modal fade text-left" id="DeleteAllotment" tabindex="-1" role="dialog" aria-labelledby="myModalLabel10"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger white">
                <h4 class="modal-title white" id="myModalLabel10">Are you sure to delete this item?</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn grey btn-outline-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-outline-danger btnDelete">Delete</button>
            </div>
        </div>
    </div>
</div>
@*Delete Modal Start*@

@section Scripts
{
    <script type="text/x-jQuery-tmpl" id="PlotListing">
        <tr class="trPlot ${HasAlotted==true?'trPlots': 'trPlots warning'}">

            <input type="hidden" class="hdnPlotId" value="${PlotId}" />
            <input type="hidden" class="hdnPlotTypeId" value="${PlotTypeId}" />
            <input type="hidden" class="hdnPlotSubTypeId" value="${PlotSubTypeId}" />
            <input type="hidden" class="hdnUnitId" value="${UnitId}" />
            <input type="hidden" class="hdnPlotSizeId" value="${PlotSizeId}" />

            <input type="hidden" class="hdnHasExtraSize" value="${HasExtraSize}" />
            <input type="hidden" class="hdnExtraSize" value="${ExtraSize}" />
            <input type="hidden" class="hdnHasAlotted" value="${HasAlotted}" />
            <input type="hidden" class="hdnUnitRate" value="${UnitRate}" />
            <input type="hidden" class="hdnTotalSize" value="${TotalSize}" />

            <td></td>
            <td class="project-title tdPlotType">${PlotType}</td>
            <td class="project-title tdPlotSubType">${PlotSubType}</td>
            <td class="project-title tdPlotSize" align="center">${PlotSize}</td>
            <td class="project-title tdExtraSize" align="center">${ExtraSize==null ? '0':ExtraSize }</td>
            <td class="project-title tdPlotNo">${PlotNo}</td>


            <td class="project-title tdAllotment">

                <div class="${HasAlotted==true?'badge badge-success badge-pill': 'badge badge-warning badge-pill'}">${HasAlotted==true?'Allotted': 'Not Allotted'}</div>

            </td>
            <td class="project-title" nowrap>
                <a href="javascript:void(0)" data-toggle="modal" data-target="#EditPlot" onclick="EditPlot(this)" data-toggle="tooltip" data-placement="top" data-original-title="Edit Plot"><i class="la la-pencil-square success"></i></a>

                <a href="javascript:void(0)" data-toggle="modal" data-target="#DeletePlot" onclick="EditPlot(this)" data-toggle="tooltip" data-placement="top" data-original-title="Delete Plot"><i class="la la-trash danger"></i></a>
            </td>

        </tr>
    </script>

    <script src="~/Scripts/assets/js/PagesJS/Plot.js"></script>


}


