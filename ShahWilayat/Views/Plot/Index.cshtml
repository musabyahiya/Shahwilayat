
@{
    ViewBag.Title = "Plot - Shah Wilayat Cooperative Housing Society";
    Layout = "~/Views/Shared/_MasterPage.cshtml";
}

<div class="content-header row">
    <div class="content-header-left col-md-6 col-12 mb-2">
        <h3 class="content-header-title">Plot</h3>
    </div>

</div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <button type="button" class="btn btn-info" data-toggle="modal" data-target="#CreatePlot">
                    Add New Plot
                </button>
            </div>
        </div>
    </div>
</div>
<!-- Both borders end-->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <fieldset>
                    <div class="input-group">
                        <input type="text" class="form-control txtSearch" placeholder="Search..." aria-describedby="basic-addon4">
                        <div class="input-group-append">
                            <span class="input-group-text" id="basic-addon4"><i class="la la-search"></i></span>
                        </div>
                    </div>
                </fieldset>

            </div>
            <div class="card-content">

                <div class="table-responsive">
                    <table class="table table-bordered mb-0 tblPlot">
                        <thead>
                            <tr>
                                <th nowrap>Sr No.</th>
                                <th>PlotType</th>
                                <th>SubType</th>
                                <th style="text-align:center">Size (SqYd)</th>
                                <th style="text-align:center">Extra Land</th>
                                <th>Plot No</th>
                                <th>Allotment</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody class="PlotListing"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@*Create Modal Start*@
<div class="modal fade text-left" id="CreatePlot" role="dialog" aria-labelledby="myModalLabel16" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel16">Create New Plot</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-body frmPlot">
                    <h4 class="form-section"><i class="la la-home"></i> Plot Details</h4>
                    <hr>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="ddlPlotType">Plot Type</label>
                                <select class="form-control ddlPlotType"></select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="ddlPlotSubType">SubType</label>
                                <select class="form-control ddlPlotSubType"></select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="txtPlotNo">Plot No</label>
                                <input type="text" class="form-control txtPlotNo notrequired" placeholder="Enter plot no">
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="ddlUnit">Unit</label>
                                <select class="form-control ddlUnit"></select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="ddlPlotSize">Plot Size</label>
                                <select class="form-control ddlPlotSize"></select>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">

                                <label for="ddlHasExtraSize">Has Extra Size</label>
                                <select class="form-control ddlHasExtraSize notrequired">
                                    <option value="0">--Select--</option>
                                    <option value="1">Has Extra Size</option>
                                </select>

                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="txtExtraSize">Extra Size</label>
                                <input type="text" class="form-control txtExtraSize" disabled="disabled" placeholder="Enter extra size">
                            </div>
                        </div>

                    </div>


                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn grey btn-outline-info" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-outline-dark btnSaveChanges">Save changes</button>
            </div>
        </div>
    </div>
</div>
@*Create Modal End*@


