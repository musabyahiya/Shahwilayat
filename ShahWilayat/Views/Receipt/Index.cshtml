@section Scripts
{
    <script type="text/x-jQuery-tmpl" id="ReceiptListing">
        <tr class="trReceipt">

            <input type="hidden" class="hdnPlotId" value="${PlotId}" />
            <input type="hidden" class="hdnMemberId" value="${MemberId}" />
            <input type="hidden" class="hdnPlotNo" value="${PlotNo}" />
            <input type="hidden" class="hdnPaymentAmount" value="${PaymentAmount}" />
            <input type="hidden" class="hdnPaymentCategory" value="${PaymentCategory}" />

            <input type="hidden" class="hdnChequeDate" value="${ChequeDate}" />
            <input type="hidden" class="hdnChequeNo" value="${ChequeNo}" />
            <input type="hidden" class="hdnPaymentDate" value="${PaymentDate}" />
            <input type="hidden" class="hdnPlotType" value="${PlotType}" />
            <input type="hidden" class="hdnFullName" value="${FullName}" />
            <input type="hidden" class="hdnPaymentMethod" value="${PaymentMethod}" />
            <input type="hidden" class="hdnMemberRelation" value="${MemberRelation}" />
            <input type="hidden" class="hdnMembershipNo" value="${MembershipNo}" />
            <input type="hidden" class="hdnReceiptNo" value="${ReceiptNo}" />


            <td></td>
            <td class="project-title tdReceiptNo">${ReceiptNo}</td>
            <td class="project-title tdMembershipNo">${MembershipNo}</td>
            <td class="project-title tdPlotNo">${PlotNo}</td>
            <td class="project-title tdSize" align="center">${Size.toFixed(1)}</td>

            <td class="project-title" nowrap align="center">
                <a href="javascript:void(0)" data-toggle="modal" onclick="EditReceipt(this)" data-target="#Receipt" data-toggle="tooltip" data-placement="top" data-original-title="Delete Plot"><i class="la la-print warning"></i></a>
            </td>

        </tr>
    </script>
    <script type="text/x-jQuery-tmpl" id="ReceiptEntityListing">
        <tr class="trReceiptEntity" style="line-height:1.5;">

            <td style="text-align: center;"><span></span></td>
            <td class="project-title tdPaymentCategory"><span>${PaymentCategory}</span></td>
            <td class="project-title tdPaymentAmount" style="text-align: center;"><span>${PaymentAmount}</span></td>

<span>
        </tr>

    </script>
    <script src="~/Scripts/assets/js/PagesJS/Receipt.js"></script>


}






