@section Scripts
{
    <script type="text/x-jQuery-tmpl" id="AllotmentListing">
        <tr class="trAllotment">

            <input type="hidden" class="hdnAssociateAllotmentId" value="${AssociateAllotmentId}" />
            <input type="hidden" class="hdnMemberId" value="${MemberId}" />
            <input type="hidden" class="hdnPlotId" value="${PlotId}" />
            <input type="hidden" class="hdnAllotmentOrderNo" value="${AllotmentOrderNo}" />
            <input type="hidden" class="hdnAllotmentOrderDate" value="${ToJavaScriptDate(AllotmentOrderDate)}" />
            <input type="hidden" class="hdnShareCertificateNo" value="${ShareCertificateNo}" />
            <input type="hidden" class="hdnShareCertificateDate" value="${ToJavaScriptDate(ShareCertificateDate)}" />
            <input type="hidden" class="hdnProvisionalAllotmentNo" value="${ProvisionalAllotmentNo}" />
            <input type="hidden" class="hdnProvisionalAllotmentDate" value="${ToJavaScriptDate(ProvisionalAllotmentDate)}" />
            <input type="hidden" class="hdnScanAllotmentOrder" value="${ScanAllotmentOrder}" />
            <input type="hidden" class="hdnScanProvisionalOrder" value="${ScanProvisionalOrder}" />
            <input type="hidden" class="hdnScanShareCertificate" value="${ScanShareCertificate}" />
            <input type="hidden" class="hdnManagementCommitteeId" value="${ManagementCommitteeId}" />
            <td></td>
            <td class="project-title tdMember" nowrap>${FirstName + ' ' + LastName}</td>
            <td class="project-title tdPlot" nowrap>${Plot}</td>
            <td class="project-title tdAllotmentOrderNo" nowrap>${AllotmentOrderNo}</td>
            <td class="project-title tdAllotmentOrderDate" nowrap>${ToJavaScriptDate(AllotmentOrderDate)}</td>


            <td class="project-title">
                <a href="javascript:void(0)" data-toggle="modal" data-target="#EditAttachment" onclick="EditAllotment(this)" title="Edit Attachment"><i class="ft-paperclip"></i></a> &nbsp;

                 <a href="javascript:void(0)" data-toggle="modal" data-target="#EditAllotment" onclick="EditAllotment(this)" data-toggle="tooltip" data-placement="top" data-original-title="Edit Allotment"><i class="la la-pencil-square success"></i></a>
            </td>


        </tr>
    </script>

    <script src="~/Scripts/assets/js/PagesJS/AssociateAllotment.js"></script>

}


