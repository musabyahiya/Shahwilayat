@section Scripts
{
    <script type="text/x-jQuery-tmpl" id="PaymentSetupListing">
        <tr class="trPaymentSetup">

            <input type="hidden" class="hdnPaymentSetupId" value="${PaymentSetupId}" />
            <input type="hidden" class="hdnPaymentCategoryId" value="${PaymentCategoryId}" />
            <input type="hidden" class="hdnPaymentCategory" value="${PaymentCategory}" />
            <input type="hidden" class="hdnPlotSubTypeId" value="${PlotSubTypeId}" />
            <input type="hidden" class="hdnPlotSubType" value="${PlotSubType}" />
            <input type="hidden" class="hdnTenureId" value="${TenureId}" />
            <input type="hidden" class="hdnRate" value="${Rate}" />
            <input type="hidden" class="hdnPlotTypeId" value="${PlotTypeId}" />
            <input type="hidden" class="hdnPlotId" value="${PlotId}" />
            <input type="hidden" class="hdnIsFixed" value="${IsFixed}" />


            <td></td>
            <td class="project-title tdPlotType">${PlotType}</td>
            <td class="project-title tdTenure">${Tenure}</td>
            <td class="project-title tdRate">${Rate}</td>
            <td class="project-title tdPlotType" align="center">${PlotType}</td>
            <td class="project-title tdPlot">${Plot}</td>
            <td class="project-title tdIsFixed">${IsFixed}</td>

            <td class="project-title tdIsFixed">
                <div class="${IsFixed==true?'badge badge-success badge-pill': 'badge badge-warning badge-pill'}">${IsFixed==true?'Allotted': 'Not Allotted'}</div>
            </td>
            <td class="project-title" nowrap>
                <a href="javascript:void(0)" data-toggle="modal" data-target="#EditPaymentSetup" onclick="EditPaymentSetup(this)" data-toggle="tooltip" data-placement="top" data-original-title="Edit Plot"><i class="la la-pencil-square success"></i></a>

                <a href="javascript:void(0)" data-toggle="modal" data-target="#DeletePlot" onclick="EditPaymentSetup(this)" data-toggle="tooltip" data-placement="top" data-original-title="Delete Plot"><i class="la la-trash danger"></i></a>
            </td>

        </tr>
    </script>

    <script src="~/Scripts/assets/js/PagesJS/PaymentSetup.js"></script>


}


